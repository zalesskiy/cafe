<h1>Listing menus</h1>

<table class="table">
  <thead>
    <tr>
      <th>Menu</th>
      <th>Name</th>
      <th>Part</th>
      <th>Url foto</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.menu %></td>
        <td><%= menu.name %></td>
        <td><%= menu.part %></td>
        <td><%= menu.url_foto %></td>
        <td><%= menu.price %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

